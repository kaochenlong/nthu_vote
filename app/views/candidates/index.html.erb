<%= flash[:notice] %>
<h1>你好</h1>
<%= link_to '新增候選人', new_candidate_path %>

<ul>
  <% @candidates.each do |candidate| %>
    <li>
      <%= candidate.name %>
      <%= link_to '更新', edit_candidate_path(candidate) %>
      <%= link_to '刪除', candidate_path(candidate), method: :delete, data:{confirm:'你確定嗎?'} %>

    </li>
  <% end %>
</ul>


